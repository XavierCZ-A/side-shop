<!-- app/views/onboardings/fields/_number_field.html.erb -->
<div class="w-full">
  <%= form.label field[:name], field[:label], class: "block text-sm font-semibold text-gray-700 mb-2" %>
  
  <div class="relative">
    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 font-medium">$</span>
    <%= form.number_field field[:name], 
      class: "w-full pl-8 pr-4 py-3.5 bg-white/80 border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-400 focus:ring-4 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all duration-200 text-base font-medium",
      placeholder: field[:placeholder],
      required: field[:required],
      min: 0,
      step: "0.01" %>
    <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 text-sm font-medium">MXN</span>
  </div>
</div>