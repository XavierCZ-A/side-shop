<!-- app/views/onboardings/fields/_text_field.html.erb -->
<div class="w-full">
  <%= form.label field[:name], field[:label], class: "block text-sm font-semibold text-gray-700 mb-2" %>
  
  <%= form.text_field field[:name], 
    placeholder: field[:placeholder],
    required: field[:required],
    class: "w-full px-4 py-3.5 bg-white/80 border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-400 focus:ring-4 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all duration-200 text-base",
    data: { 
      onboarding_target: "input",
      action: "input->onboarding#updateSlug"
    } %>
  
  <% if field[:name] == :name %>
    <div class="mt-5">
      <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Así se verá tu tienda</p>
      
      <!-- Preview Card -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Browser chrome -->
        <div class="bg-gray-100 px-4 py-2.5 flex items-center gap-3 border-b border-gray-200">
          <div class="flex gap-1.5">
            <div class="w-3 h-3 rounded-full bg-red-400"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
            <div class="w-3 h-3 rounded-full bg-green-400"></div>
          </div>
          
          <!-- URL Bar -->
          <div class="flex-1 bg-white rounded-lg px-3 py-1.5 flex items-center gap-2 shadow-inner">
            <svg class="w-3.5 h-3.5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
            <div class="flex items-center text-sm">
              <span class="text-gray-400">shopy.mx/</span>
              <span class="font-semibold text-indigo-600" data-onboarding-target="slugPreview">tu-tienda</span>
            </div>
          </div>
        </div>
        
        <!-- Content Preview -->
        <div class="h-32 bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 flex items-center justify-center">
          <div class="text-center">
            <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl mx-auto mb-2 flex items-center justify-center shadow-lg">
              <span class="text-white text-lg">✨</span>
            </div>
            <p class="text-sm text-gray-500">Tu tienda aparecerá aquí</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>