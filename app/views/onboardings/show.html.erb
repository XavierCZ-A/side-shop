<main data-controller="onboarding" class="min-h-screen flex flex-col bg-gradient-to-br from-purple-100 via-blue-50 to-pink-100 relative overflow-hidden">
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-300/30 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-300/30 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-pink-200/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Step Progress Indicator -->
  <div class="relative z-10 pt-6 pb-4 px-4">
    <div class="max-w-md mx-auto">
      <div class="flex items-center justify-between">
        <% @onboarding.steps.each_with_index do |step, index| %>
          <div class="flex items-center">
            <!-- Step circle -->
            <div 
              class="w-10 h-10 rounded-full flex items-center justify-center font-semibold text-sm transition-all duration-300 shadow-sm"
              data-onboarding-target="indicator"
              data-step-index="<%= index %>"
            >
              <% case step.id %>
              <% when "welcome" %>
                <span class="text-lg">ğŸ‘‹</span>
              <% when "store_info" %>
                <span class="text-lg">ğŸª</span>
              <% when "store_color" %>
                <span class="text-lg">ğŸ¨</span>
              <% when "product" %>
                <span class="text-lg">ğŸ“¦</span>
              <% else %>
                <%= index + 1 %>
              <% end %>
            </div>
          </div>
          
          <% unless index == @onboarding.steps.length - 1 %>
            <!-- Connector line -->
            <div class="flex-1 h-1 mx-2 rounded-full bg-gray-200 transition-all duration-300">
              <div 
                class="h-full rounded-full bg-indigo-500 transition-all duration-500"
                data-onboarding-target="progressLine"
                data-line-index="<%= index %>"
                style="width: 0%;"
              ></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <div class="flex-1 flex items-center justify-center px-4 py-6 relative z-10">
    <%= form_with model: @onboarding, class: "w-full" do |form| %>
      <% @onboarding.steps.each_with_index do |step, index| %>
        <div
          id="<%= dom_id(step) %>"
          class="<%= class_names("w-full max-w-lg mx-auto transition-all duration-500 ease-out", { "hidden": index != 0 }) %>"
          data-onboarding-target="step"
          data-step-index="<%= index %>"
        >
          <!-- Glass card -->
          <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-xl shadow-purple-500/5 border border-white/50 p-6 sm:p-8">
            <!-- Header -->
            <div class="text-center mb-6">
              <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">
                <%= step.title %>
              </h2>
              
              <%= tag.p step.description, class: "text-base text-gray-600" if step.description.present? %>
            </div>

            <!-- Fields -->
            <div class="space-y-5">
              <% step.fields.each do |field| %>
                <%= render partial: "onboardings/fields/#{field[:type]}", locals: { form: form, field: field } %>
                
                <% if field[:hint].present? %>
                  <p class="text-sm text-center text-gray-500">
                    <%= field[:hint] %>
                  </p>
                <% end %>
              <% end %>
            </div>

            <!-- Action button -->
            <div class="mt-8">
              <% if index == @onboarding.steps.length - 1 %>
                <%= form.submit "ğŸš€ Crear mi tienda", 
                  class: "w-full py-4 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold rounded-2xl shadow-lg shadow-indigo-500/30 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl cursor-pointer text-lg" %>
              <% else %>
                <button
                  type="button"
                  class="w-full py-4 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold rounded-2xl shadow-lg shadow-indigo-500/30 transition-all duration-300 hover:scale-[1.02] hover:shadow-xl text-lg"
                  data-step="<%= step.id %>"
                  data-action="onboarding#continue"
                >
                  Continuar â†’
                </button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Footer hint -->
  <div class="relative z-10 pb-6 text-center">
    <p class="text-sm text-gray-500">
      Paso <span data-onboarding-target="currentStep">1</span> de <%= @onboarding.steps.length %>
    </p>
  </div>
</main>