<% content_for :title, "Editing product" %>

<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black opacity-40"></div>
    <div data-modal-target="sidebar" class="fixed top-1/2 left-1/2 w-[95%] md:w-[600px] h-auto max-h-[90vh] transform -translate-x-1/2 -translate-y-1/2 z-20 bg-white shadow-2xl rounded-2xl overflow-hidden flex flex-col ease-in-out duration-300 opacity-0 scale-95 ring-1 ring-black/5">
      <div class="flex items-center justify-between p-4 border-b border-gray-200 text-black">
        <div class="flex flex-col border-gray-200 w-full">
          <div class="flex justify-between items-center mb-1">
            <h1 class="font-bold text-lg">Editar producto</h1>
            <button type="button" data-action="click->modal#close"
                    class="p-2 rounded-full bg-gray-200 hover:bg-gray-300 transition duration-200">
              <%= render_svg("close.svg") %>
            </button>
          </div>
          <p class="text-sm text-gray-500">Edita los detalles del producto</p>
        </div>
      </div>
      <div class="flex-1 overflow-y-auto p-5 bg-white scrollbar-hide">
        <%= render "form", product: @product %>
      </div>
    </div>
  </div>
<% end %>