<div id="<%= dom_id(product) %>" class="bg-white rounded-3xl shadow-sm overflow-hidden border border-gray-100 hover:shadow-md transition-shadow duration-300">
  
  <div class="relative h-64 overflow-hidden">
    <%= image_tag "pain.jpg", 
        alt: "Pain", 
        class: "w-full h-full object-cover transition-transform duration-500 hover:scale-110" %>
  </div>

  <div class="p-5">
    <%# Resto del contenido (Título, Precio, Descripción, Botón) %>
    <div class="flex justify-between items-start mb-2 gap-4">
      <h3 class="text-lg font-bold text-gray-900 leading-tight">
        <%= product.name %>
      </h3>
      <span class="text-lg font-bold text-purple-600 shrink-0">
        <%= number_to_currency(product.price) %>
      </span>
    </div>

    <%# TODO agregar rich text para la descripcion del producto %>

    <%= link_to edit_admin_product_path(product), data: { turbo_frame: "modal" }, class: "flex items-center justify-center gap-4 p-2 rounded-lg w-full border-dashed border-2 border-gray-900 text-gray-900 hover:bg-gray-50 font-medium cursor-pointer" do %>
      <%= render_svg("pencil.svg", styles: "w-6 h-6") %>
      Editar Producto
    <% end %>
  </div>
</div>