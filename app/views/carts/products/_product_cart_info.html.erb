<div class="px-5 py-5 border-b border-gray-50 hover:bg-gray-50/50 transition-colors">
    <div class="flex gap-4">
        <div class="shrink-0 w-24 h-24 sm:w-28 sm:h-28 bg-gray-100 rounded-xl overflow-hidden">
            <%= image_tag "pain.jpg", alt: "Audífonos Inalámbricos Pro Max", class: "w-full h-full object-cover" %>
        </div>

        <div class="flex-1 min-w-0">
            <div class="flex items-start justify-between gap-2">
                <div class="min-w-0">
                    <h3 class="text-sm sm:text-base font-semibold text-gray-900 truncate"><%= product.product.name %></h3>
                    <p class="text-xs text-gray-500 mt-0.5 line-clamp-2 hidden sm:block">Cancelación de ruido activa, batería de 30 horas, conexión Bluetooth 5.3</p>
                </div>
                <%= button_to line_item_path(product), method: :delete, class: "p-1.5 rounded-lg hover:bg-red-50 text-gray-300 hover:text-red-400 transition-colors cursor-pointer shrink-0" do %>
                    <%= render_svg("trash.svg", styles: "w-4 h-4") %>
                <% end %>
            </div>

            <div class="flex items-end justify-between mt-3">
                <div class="flex items-center border border-gray-200 rounded-lg overflow-hidden">

                    <%= button_to line_item_path(product, operation: "decrement"), method: :patch, class: "w-8 h-8 flex items-center justify-center text-black hover:bg-gray-100 transition-colors cursor-pointer" do %>
                      <%= render_svg("minus.svg", styles: "w-3.5 h-3.5") %>
                    <% end %>

                    <span id="line_item_<%= product.id %>_quantity" class="w-8 h-8 flex items-center justify-center text-sm font-semibold text-gray-800 border-x border-gray-200 bg-gray-50"><%= product.quantity %></span>

                    <%= button_to line_item_path(product, operation: "increment"), method: :patch, class: "w-8 h-8 flex items-center justify-center text-black hover:bg-gray-100 transition-colors cursor-pointer" do %>
                      <%= render_svg("plus.svg", styles: "w-3.5 h-3.5") %>
                    <% end %>

                </div>

                <div class="text-right">
                    <span id="line_item_<%= product.id %>_price" class="text-base sm:text-lg font-bold text-gray-900"><%= number_to_currency(product.total_price) %></span>
                </div>
            </div>
        </div>
    </div>
</div>
